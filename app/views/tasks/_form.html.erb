<div class="container">
  <%= form_for(@task) do |t| %>
    <div class="form-group">
      <%= t.label :title %>
      <%= t.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= t.label :details %>
      <%= t.text_field :details, class: 'form-control' %>
    </div>

    <div class="field">
      <%= t.label "Done" %> <br />
      <%= t.check_box :completed, {}, true %> <br />
    </div>

    <div class="my-3">
      <%= t.submit class: 'btn btn-primary' %>
    </div>
  <% end %>
   <%= link_to 'Back to list', tasks_path %>
</div>
